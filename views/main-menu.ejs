    <div id="loading-overlay" class="loading-overlay">
        <div class="spinner"></div>
        <div class="loading-text" id="loading-text">Creating playlists...</div>
        <div class="loading-subtext" id="loading-subtext">This may take a minute for large libraries</div>
    </div>

    <script>
        const loadingOverlay = document.getElementById('loading-overlay');
        const loadingText = document.getElementById('loading-text');
        const loadingSubtext = document.getElementById('loading-subtext');

        const endpoints = {
            energetic: '/create-playlist/energetic',
            mellow: '/create-playlist/mellow',
            chill: '/create-playlist/chill'
        };

        const categoryNames = {
            energetic: 'Energetic',
            mellow: 'Mellow',
            chill: 'Chill'
        };

        // Job polling: Recursive 1s interval checks until completion or 2min timeout
        // WHY polling: WebSockets would be overkill for 2-5min jobs, HTTP polling is simpler
        async function pollJobStatus(jobId, onProgress, onComplete, onError) {
            const maxAttempts = 120; // 120s = 2min max wait time
            let attempts = 0;

            const poll = async () => {
                try {
                    const response = await fetch(`/api/job/${jobId}`);
                    const data = await response.json();

                    if (!data.success) {
                        onError('Job not found');
                        return;
                    }

                    const job = data.job;
                    onProgress(job.progress, job.message);

                    if (job.status === 'completed') {
                        onComplete(job.result);
                        return;
                    }

                    if (job.status === 'failed') {
                        onError(job.error || job.message);
                        return;
                    }

                    attempts++;
                    if (attempts < maxAttempts) {
                        setTimeout(poll, 1000); // Recursive call after 1s delay
                    } else {
                        onError('Operation timed out. Please try again.'); // 2min exceeded
                    }
                } catch (error) {
                    onError(error.message);
                }
            };

            poll(); // Start polling immediately
        }

        function setupPlaylistForm(formId, category) {
            const form = document.getElementById(formId);
            const resultDiv = document.getElementById(`${category}-result`);
            const submitButton = form.querySelector('.playlist-submit-button');

            form.addEventListener('submit', async (e) => {
                e.preventDefault();

                // TEMPORARY: Feature under maintenance
                resultDiv.className = 'playlist-result-message error';
                resultDiv.style.display = 'block';
                resultDiv.innerHTML = `<strong>Sorry, this feature is under maintenance.</strong><br>Please try again later.`;
                return;
                // END TEMPORARY

                const formData = new FormData(form);
                const playlistName = formData.get('name') || `${categoryNames[category]} Vibes`;

                submitButton.disabled = true;
                submitButton.textContent = 'Creating...';
                resultDiv.style.display = 'none';
                loadingOverlay.classList.add('active');
                loadingText.textContent = `Creating ${categoryNames[category]} playlist...`;
                loadingSubtext.textContent = 'Starting...';

                try {
                    // Start the background job
                    const response = await fetch(endpoints[category], {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: new URLSearchParams(formData)
                    });

                    const data = await response.json();

                    if (!data.success || !data.jobId) {
                        throw new Error(data.message || 'Failed to start playlist creation');
                    }

                    // Poll for job status
                    pollJobStatus(
                        data.jobId,
                        // On progress update
                        (progress, message) => {
                            loadingSubtext.textContent = message || `Progress: ${progress}%`;
                        },
                        // On complete
                        (result) => {
                            loadingOverlay.classList.remove('active');
                            resultDiv.className = 'playlist-result-message success';
                            resultDiv.style.display = 'block';
                            resultDiv.innerHTML = `
                                <strong>Playlist created successfully!</strong><br>
                                <small>Total songs analyzed: ${result.totalSongs} | 
                                Tracks in playlist: ${result.trackCount}</small><br>
                                <small>Check your Spotify app to see your new playlist!</small>
                            `;
                            form.reset();
                            submitButton.disabled = false;
                            submitButton.textContent = 'Create Playlist';
                        },
                        // On error
                        (errorMsg) => {
                            loadingOverlay.classList.remove('active');
                            resultDiv.className = 'playlist-result-message error';
                            resultDiv.style.display = 'block';
                            resultDiv.innerHTML = `<strong>Error:</strong> ${errorMsg}`;
                            submitButton.disabled = false;
                            submitButton.textContent = 'Create Playlist';
                        }
                    );
                } catch (error) {
                    loadingOverlay.classList.remove('active');
                    resultDiv.className = 'playlist-result-message error';
                    resultDiv.style.display = 'block';
                    resultDiv.innerHTML = `<strong>Error:</strong> ${error.message}`;
                    submitButton.disabled = false;
                    submitButton.textContent = 'Create Playlist';
                }
            });
        }

        setupPlaylistForm('energetic-form', 'energetic');
        setupPlaylistForm('mellow-form', 'mellow');
        setupPlaylistForm('chill-form', 'chill');

        // Tier 3 Cache: Client-side hover prefetching
        // WHY: Reduces perceived page load time from ~1-2s to instant (data already fetched on hover)
        // Triggered 500ms after hover to avoid prefetching on accidental mouse-overs
        const cache = new Map(); // url â†’ html string
        const precacheDelay = 500; // ms delay before prefetch starts
        let precacheTimeout = null;

        async function precachePage(url) {
            if (cache.has(url)) {
                return; // Already cached
            }

            try {
                const response = await fetch(url, {
                    method: 'GET',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest' // Identify as AJAX request
                    }
                });
                
                if (response.ok) {
                    const html = await response.text();
                    cache.set(url, html);
                    console.log(`Precached: ${url}`);
                }
            } catch (error) {
                console.log(`Precache failed for ${url}:`, error); // Non-fatal, just log
            }
        }

        const featureCards = document.querySelectorAll('.feature-card');
        const featureNames = {
            '/dashboard': 'Loading Insights...',
            '/get-top-tracks': 'Loading Top Tracks...',
            '/get-top-artists': 'Loading Top Artists...',
            '/get-artist-dive': 'Loading Artist Deep Dive...'
        };

        featureCards.forEach(card => {
            card.addEventListener('mouseenter', () => {
                clearTimeout(precacheTimeout);
                const url = card.getAttribute('href');
                if (url && !cache.has(url)) {
                    precacheTimeout = setTimeout(() => {
                        precachePage(url);
                    }, precacheDelay);
                }
            });

            card.addEventListener('mouseleave', () => {
                clearTimeout(precacheTimeout);
            });

            // Show loading overlay when clicking feature cards
            card.addEventListener('click', (e) => {
                const url = card.getAttribute('href');
                loadingOverlay.classList.add('active');
                loadingText.textContent = featureNames[url] || 'Loading...';
                loadingSubtext.textContent = 'Fetching your Spotify data';
            });
